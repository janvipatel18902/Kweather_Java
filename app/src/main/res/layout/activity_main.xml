<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <EditText
        android:id="@+id/etCityName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_city_name" />

    <Button
        android:id="@+id/btnGetWeather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/get_weather"
        android:layout_below="@id/etCityName"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btnLocationWeather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/get_weather_by_location"
        android:layout_below="@id/btnGetWeather"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18sp"
        android:layout_below="@id/btnLocationWeather"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/tvSuggestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvResult"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="4dp"
        android:padding="12dp"
        android:background="#E3F2FD"
        android:textColor="#0D47A1"
        android:textSize="16sp"
        android:textStyle="bold"
        android:elevation="2dp"
        android:text="Smart suggestion will appear here." />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvForecast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvSuggestion"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" />

    <Switch
        android:id="@+id/switchTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dark_mode"
        android:layout_below="@id/rvForecast"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/logout"
        android:layout_below="@id/switchTheme"
        android:layout_marginTop="16dp" />
</RelativeLayout>
